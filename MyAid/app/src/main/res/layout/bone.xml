<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white"
    android:backgroundTint="#FFFFFF"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30sp">

        <TextView
            android:id="@+id/txt1"
            android:textColor="#651FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broken Bone Steps to Follow:"
            android:textSize="30sp"
            android:layout_marginLeft="10sp"
            android:textStyle="bold|italic"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_marginTop="50sp"
            android:layout_gravity="center"
            android:src="@drawable/bone1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="1. Stop any bleeding by applying direct pressure to the wound with a clean cloth."
            android:textSize="20sp"
            android:layout_marginLeft="10sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_marginTop="30sp"
            android:contentDescription="TODO"
            android:src="@drawable/bone2"
            android:layout_gravity="center"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="2.Immobilize the affected area using a splint or sling."
            android:textSize="20sp"
            android:layout_marginLeft="10sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:layout_marginTop="30sp"
            android:src="@drawable/bone3" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="10sp"
            android:layout_height="wrap_content"
            android:text="3. Apply ice to the affected area to reduce swelling and pain."
            android:textSize="20sp"
            tools:ignore="HardcodedText" />
        <ImageView
            android:layout_height="100sp"
            android:layout_marginTop="30sp"
            android:layout_width="300sp"
            android:layout_gravity="center"
            android:src="@drawable/skin4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Take an over-the-counter pain reliever like ibuprofen or acetaminophen for pain relief."
            android:textSize="20sp"
            android:layout_marginLeft="10sp"
            android:textColor="#000000"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="300sp"
            android:layout_marginTop="30sp"
            android:layout_gravity="center"
            android:layout_height="100sp"
            android:src="@drawable/skin5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="10sp"
            android:text="5. Seek medical attention."
            android:textSize="20sp"/>



        <Button
            android:id="@+id/back"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30sp"
            android:onClick="back"
            android:text="Back"
            android:textColor="#000000"
            android:textSize="20sp"
            app:backgroundTint="@color/white"
            app:icon="@drawable/backk"
            app:iconTintMode="add" />

        <Button
            android:id="@+id/emergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ðŸ“ž emergency call"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#FD0000"
            android:layout_marginTop="20sp"
            />


    </LinearLayout>
</ScrollView>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white"
    android:backgroundTint="#FFFFFF"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30sp">

        <TextView
            android:id="@+id/txt1"
            android:textColor="#651FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poisoning Steps to Follow:"
            android:textSize="30sp"
            android:layout_marginLeft="10sp"
            android:textStyle="bold|italic"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_marginTop="50sp"
            android:layout_gravity="center"
            android:src="@drawable/cpr1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="1.Call for emergency medical assistance."
            android:textSize="20sp"
            android:layout_marginLeft="10sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_marginTop="30sp"
            android:contentDescription="TODO"
            android:src="@drawable/poison2"
            android:layout_gravity="center"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="2.Identify the type of poison, if possible, and tell emergency medical personnel what you know."
            android:textSize="20sp"
            android:layout_marginLeft="10sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:layout_marginTop="30sp"
            android:src="@drawable/poison3" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="10sp"
            android:layout_height="wrap_content"
            android:text="3.Do not give the person anything to eat or drink unless instructed to do so by emergency medical personnel."
            android:textSize="20sp"
            tools:ignore="HardcodedText" />
        <ImageView
            android:layout_height="100sp"
            android:layout_marginTop="30sp"
            android:layout_width="300sp"
            android:layout_gravity="center"
            android:src="@drawable/poison4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Follow any first aid instructions provided by emergency medical personnel until they arrive."
            android:textSize="20sp"
            android:layout_marginLeft="10sp"
            android:textColor="#000000"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/back"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30sp"
            android:onClick="back"
            android:text="Back"
            android:textColor="#000000"
            android:textSize="20sp"
            app:backgroundTint="@color/white"
            app:icon="@drawable/backk"
            app:iconTintMode="multiply" />


        <Button
            android:id="@+id/emergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ðŸ“ž emergency call"
            android:textColor="#fff"
            android:textSize="20sp"
            app:backgroundTint="#FD0000"
            android:textStyle="bold"
            android:layout_marginTop="20sp"
            />


    </LinearLayout>
</ScrollView><?xml version="1.0" encoding="utf-8"?>
